@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "RoleList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table id="myTable" class="display Examples display">
    <thead>
        <!--標題-->
        <tr>
            <th>
               使用者名
            </th>
            <th>
                使用者ID
            </th>
            <th>
                "操作"
            </th>
        </tr>

    </thead>

    <tbody>
        <!--資料內容-->
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    <a class="btn btn-light btn-sm" style="padding-left:20px;padding-right:20px;" asp-action="EditRole" asp-route-id="@item.Id">Edit</a>
                </td>
            </tr>
        }

    </tbody>
</table>




